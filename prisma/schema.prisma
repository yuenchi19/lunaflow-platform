generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String              @unique
  role               String              @default("student")
  status             String              @default("active") // active, inactive
  plan               String              @default("light")
  affiliateCode      String?             @unique
  referredBy         String?
  communityNickname  String?
  avatarUrl          String?
  zipCode            String?
  address            String?
  payoutPreference   String              @default("offset_purchase")
  isLedgerEnabled    Boolean             @default(false)
  lineUserId         String?             @unique
  lastLoginDate      DateTime?
  lastLineReminderSentAt DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  initialPaymentDate DateTime?
  githubId           String?             @unique
  githubUsername     String?
  githubInviteStatus String?             @default("none") // none, pending, invited, joined
  
  // Stripe Integration
  stripeCustomerId       String?         @unique
  stripeSubscriptionId   String?         @unique
  subscriptionStatus     String?         @default("active") // active, past_due, canceled, incomplete
  
  purchaseRequests   PurchaseRequest[]
  rewardTransactions RewardTransaction[]
  ledgerEntries      LedgerEntry[]
  inventoryAssignments InventoryItem[]
  oneTimeTokens      OneTimeToken[]
  progress           UserProgress[]
  
  // Partner Payout Info
  bankName           String?
  bankBranch         String?
  bankAccountType    String?             @default("ordinary") // ordinary, current
  bankAccountNumber  String?
  bankAccountHolder  String?
  kobutsushoNumber   String? // Antique Dealer License Number
  invoiceRegistrationNumber String?      // Added for Partner Invoice
}

model OneTimeToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  type      String    @default("line_auth") // line_auth, etc.
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
}




model Course {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  label       String?
  thumbnailUrl String?
  order       Int        @default(0)
  published   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  allowedPlans String[]   @default([]) // e.g. ["light", "standard", "premium"]
  categories  Category[]
}

model Category {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  order     Int      @default(0)
  published Boolean  @default(true)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Block {
  id           String   @id @default(cuid())
  categoryId   String
  title        String
  type         String   // 'video', 'text', 'assignment', 'quiz'
  content      String?  @db.Text
  videoUrl     String?
  fileUrl      String?
  order        Int      @default(0)
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  feedbackType String? // 'manual', 'ai'
  progress     UserProgress[]
}

model UserProgress {
  id              String    @id @default(cuid())
  userId          String
  blockId         String
  status          String   // 'completed', 'in_progress', 'not_started'
  completedAt     DateTime?
  feedbackContent String?  @db.Text
  feedbackStatus  String? // 'pending', 'completed'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  block           Block    @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@unique([userId, blockId])
}

enum ItemStatus {
  IN_STOCK
  ASSIGNED
  SHIPPED
  RECEIVED
  SOLD
  RETURNED
}

model InventoryItem {
  id              String   @id @default(cuid())
  adminId         String   // The admin who registered it
  
  brand           String
  name            String?
  category        String?
  costPrice       Int
  sellingPrice    Int?     // Calculated as costPrice * 1.15 usually
  images          String[] // Main photos
  damageImages    String[] // Damage/Defect photos
  isSelfSourced   Boolean  @default(false)
  isOmakase       Boolean  @default(true) // True = Available in Pool, False = Admin Stock (Private)
  
  status          ItemStatus @default(IN_STOCK)

  // Product Details
  condition       String?  // S, A, B, C, D
  hasAccessories  Boolean  @default(false)
  accessories     String[] // Box, Dust Bag, Card, etc.
  note            String?  // Other comments
  supplier        String?  // Purchase Source (Legacy/Simple)
  supplierName    String?  // Kobutsusho: Name
  supplierAddress String?  // Kobutsusho: Address
  supplierOccupation String? // Kobutsusho: Occupation
  supplierAge     Int?     // Kobutsusho: Age
  idVerificationMethod String? // Kobutsusho: ID Method
  purchaseDate    DateTime? @default(now())
  receivedAt      DateTime? // When student verified/received item

  // Assignment
  assignedToUser   User?   @relation(fields: [assignedToUserId], references: [id])
  assignedToUserId String?
  
  purchaseRequest   PurchaseRequest? @relation(fields: [purchaseRequestId], references: [id])
  purchaseRequestId String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LedgerEntry {
  id              String   @id @default(cuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String
  
  originItemId    String?  // Link to InventoryItem.id
  
  brand           String
  purchaseDate    DateTime
  purchasePrice   Int
  images          String[]
  
  // Sales Data
  sellDate        DateTime?
  sellPrice       Int?
  shippingCost    Int?
  platformFee     Int?
  profit          Int?

  salePlatform    String?  // Mercari, Rakuma, etc.
  saleNote        String?  // Remarks
  
  status          ItemStatus @default(ASSIGNED)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PurchaseRequest {
  id                 String              @id @default(cuid())
  userId             String
  amount             Int
  plan               String
  status             String              @default("pending")
  stripeInvoiceId    String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  note               String?
  carrier            String?             // 'jp', 'ym', 'sg'
  scheduledDate      DateTime?
  user               User                @relation(fields: [userId], references: [id])
  rewardTransactions RewardTransaction[]
  inventoryItems     InventoryItem[]
}

model RewardTransaction {
  id                String           @id @default(cuid())
  userId            String
  amount            Int
  type              String
  description       String?
  purchaseRequestId String?
  createdAt         DateTime         @default(now())
  purchaseRequest   PurchaseRequest? @relation(fields: [purchaseRequestId], references: [id])
  user              User             @relation(fields: [userId], references: [id])
}

model SentEmail {
  id             String   @id @default(cuid())
  recipientName  String
  recipientEmail String
  subject        String
  content        String
  sentAt         DateTime @default(now())
  status         String
}

model FeatureUnlock {
  id               String   @id @default(cuid())
  featureKey       String   // "affiliate", "inventory"
  plan             String   @default("standard") // "light", "standard", "premium"
  status           String   @default("active")   // "active", "locked"
  requiredCourseId String?
  requiredBlockId  String?
  updatedAt        DateTime @updatedAt

  @@unique([featureKey, plan])
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  target      String   @default("all") // all, students, staff
  status      String   @default("draft") // draft, published
  publishedAt DateTime @default(now()) // Display date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SystemSetting {
  key         String   @id
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  price         Int
  image         String?
  stripePriceId String?
  stock         Int      @default(0)
  isVisible     Boolean  @default(true)
  
  // Extended Details
  brand         String?
  category      String?
  condition     String?
  accessories   String[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  restockSubscriptions ProductRestockSubscription[]
}

model ProductRestockSubscription {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String?
  email     String   // Can be guest or user
  createdAt DateTime @default(now())
}
