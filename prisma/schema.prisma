model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String              @unique
  role               String              @default("student")
  status             String              @default("active") // active, inactive
  plan               String              @default("light")
  affiliateCode      String?             @unique
  referredBy         String?
  communityNickname  String?
  zipCode            String?
  address            String?
  payoutPreference   String              @default("offset_purchase")
  isLedgerEnabled    Boolean             @default(false)
  lineUserId         String?             @unique
  lastLoginDate      DateTime?
  lastLineReminderSentAt DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  initialPaymentDate DateTime?
  githubId           String?             @unique
  githubUsername     String?
  githubInviteStatus String?             @default("none") // none, pending, invited, joined
  purchaseRequests   PurchaseRequest[]
  rewardTransactions RewardTransaction[]
  ledgerEntries      LedgerEntry[]
  inventoryAssignments InventoryItem[]
  oneTimeTokens      OneTimeToken[]
  progress           UserProgress[]
}

model OneTimeToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  type      String    @default("line_auth") // line_auth, etc.
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
}




model Course {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  label       String?
  thumbnailUrl String?
  order       Int        @default(0)
  published   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  minTier     Int        @default(1) // 1: Light, 2: Standard, 3: Premium
  categories  Category[]
}

model Category {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  order     Int      @default(0)
  published Boolean  @default(true)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Block {
  id           String   @id @default(cuid())
  categoryId   String
  title        String
  type         String   // 'video', 'text', 'assignment', 'quiz'
  content      String?  @db.Text
  videoUrl     String?
  fileUrl      String?
  order        Int      @default(0)
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  feedbackType String? // 'manual', 'ai'
  progress     UserProgress[]
}

model UserProgress {
  id              String    @id @default(cuid())
  userId          String
  blockId         String
  status          String   // 'completed', 'in_progress', 'not_started'
  completedAt     DateTime?
  feedbackContent String?  @db.Text
  feedbackStatus  String? // 'pending', 'completed'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  block           Block    @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@unique([userId, blockId])
}

enum ItemStatus {
  IN_STOCK
  ASSIGNED
  SHIPPED
  RECEIVED
  SOLD
  RETURNED
}

model InventoryItem {
  id              String   @id @default(cuid())
  adminId         String   // The admin who registered it
  
  brand           String
  name            String?
  category        String?
  costPrice       Int
  sellingPrice    Int?     // Calculated as costPrice * 1.15 usually
  images          String[] // Main photos
  damageImages    String[] // Damage/Defect photos
  
  status          ItemStatus @default(IN_STOCK)

  // Product Details
  condition       String?  // S, A, B, C, D
  hasAccessories  Boolean  @default(false)
  accessories     String[] // Box, Dust Bag, Card, etc.
  note            String?  // Other comments

  // Assignment
  assignedToUser   User?   @relation(fields: [assignedToUserId], references: [id])
  assignedToUserId String?
  
  purchaseRequest   PurchaseRequest? @relation(fields: [purchaseRequestId], references: [id])
  purchaseRequestId String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LedgerEntry {
  id              String   @id @default(cuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String
  
  originItemId    String?  // Link to InventoryItem.id
  
  brand           String
  purchaseDate    DateTime
  purchasePrice   Int
  images          String[]
  
  // Sales Data
  sellDate        DateTime?
  sellPrice       Int?
  shippingCost    Int?
  platformFee     Int?
  profit          Int?
  
  status          ItemStatus @default(ASSIGNED)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PurchaseRequest {
  id                 String              @id @default(cuid())
  userId             String
  amount             Int
  plan               String
  status             String              @default("pending")
  stripeInvoiceId    String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  note               String?
  carrier            String?             // 'jp', 'ym', 'sg'
  scheduledDate      DateTime?
  user               User                @relation(fields: [userId], references: [id])
  rewardTransactions RewardTransaction[]
  inventoryItems     InventoryItem[]
}

model RewardTransaction {
  id                String           @id @default(cuid())
  userId            String
  amount            Int
  type              String
  description       String?
  purchaseRequestId String?
  createdAt         DateTime         @default(now())
  purchaseRequest   PurchaseRequest? @relation(fields: [purchaseRequestId], references: [id])
  user              User             @relation(fields: [userId], references: [id])
}

model SentEmail {
  id             String   @id @default(cuid())
  recipientName  String
  recipientEmail String
  subject        String
  content        String
  sentAt         DateTime @default(now())
  status         String
}

model FeatureUnlock {
  id               String   @id @default(cuid())
  featureKey       String   @unique // "affiliate", "inventory"
  requiredCourseId String?
  requiredBlockId  String?
  updatedAt        DateTime @updatedAt
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  target      String   @default("all") // all, students, staff
  status      String   @default("draft") // draft, published
  publishedAt DateTime @default(now()) // Display date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SystemSetting {
  key         String   @id
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt
}
